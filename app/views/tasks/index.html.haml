%h1 任務列表
= link_to t('.start_time_sort'), root_path(sort: 'start_time')
= link_to t('.end_time_sort'), root_path(sort: 'end_time')
= link_to t('.create_time_sort'), root_path
%table 
  %thead 
    %tr
      %td 任務
      %td 開始時間
      %td 結束時間
  %tbody 
    - @tasks.each do |task|
      %tr 
        %td 
          = link_to task.title, task_path(task)
        %td 
          = task.start_time 
        %td 
          = task.end_time
        %td 
          = link_to t('.destroy_task'), task_path(task), method: 'delete', data: {confirm: t('.destroy_check_text')}
= link_to t('.create_task'), new_task_path